{
  "name": "helios-ag/fm-tinymce-bundle",
  "description": "TinyMCE bundle, adds TinyMCE editor to your Symfony project",
  "keywords": ["tinymce", "wisywig", "file manager"],
  "type": "symfony-bundle",
  "homepage": "https://github.com/helios-ag/FMTinyMCEBundle",
  "license": "MIT",
  "minimum-stability": "dev",
  "authors": [
    {
      "name": "Al Ganiev",
      "email": "helios.ag@gmail.com"
    },
    {
      "name": "Symfony Community",
      "homepage": "https://github.com/helios-ag/FMTinyMCEBundle/contributors"
    }
  ],
  "archive": {
    "exclude": ["/tests", "/.github"]
  },
  "require": {
    "php":                                 "^7.2",
    "symfony/framework-bundle":            "^3.4 || ^4.1 || ^5.0",
    "symfony/twig-bundle":                 "^3.4 || ^4.1 || ^5.0",
    "symfony/form":                        "^3.4 || ^4.1 || ^5.0",
    "tinymce/tinymce":                     "^4"
  },
  "require-dev" : {
    "symfony/phpunit-bridge": "^5.0",
    "matthiasnoback/symfony-config-test":  "^3.0",
    "matthiasnoback/symfony-dependency-injection-test": "^2.0"
  },
  "suggest": {
    "helios-ag/fm-elfinder-bundle": "Elfinder bundle, file manager",
    "helios-ag/fm-rfm-bundle": "Richfilemanager bundle, file manager"
  },
  "extra": {
    "branch-alias": {
        "dev-master": "1.0-dev"
    }
  },
  "autoload": {
    "psr-4": { "FM\\TinyMCEBundle\\": "src/" }
  },
  "autoload-dev": {
    "psr-4": { "FM\\TinyMCEBundle\\Tests\\": "tests/" }
  }
}
